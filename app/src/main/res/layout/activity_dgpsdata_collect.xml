<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_close"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_close_black_24dp" />

            <TextView
                android:id="@+id/fbname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/my_custom_font"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"
                android:textStyle="normal" />

            <Button
                android:id="@+id/save"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/my_custom_font"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Save"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offwhite"
        android:scrollbars="vertical"
        android:scrollingCache="true">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12sp"
            android:paddingTop="20sp"
            android:scrollbars="vertical">
            <!--Secton One from Divisio to dropdown-->
            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtViewdivid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:text="Division:"
                        android:textAlignment="gravity"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtViewdiv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtViewranid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:text="Range:"
                        android:textAlignment="gravity"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtViewran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtViewfbid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:text="Forest Block:"
                        android:textAlignment="gravity"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtViewfb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal"

                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l3"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtpatchno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:text="Patch No:"
                        android:textAlignment="gravity"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edttxtpatchno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="@drawable/back"
                        android:enabled="false"
                        android:fontFamily="@font/my_custom_font"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l4"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtringno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:text="Ring No:"
                        android:textAlignment="gravity"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edttxtringno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="@drawable/back"
                        android:enabled="false"
                        android:fontFamily="@font/my_custom_font"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l5"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtpillarno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:text="Pillar No:"
                        android:textAlignment="gravity"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edttxtpillarno"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="@drawable/back"
                        android:enabled="false"
                        android:fontFamily="@font/my_custom_font"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l6"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtForestoffnm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:singleLine="true"
                        android:text="Forest Official:"
                        android:textAlignment="gravity"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edtForestoffnm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="@drawable/back"
                        android:enabled="true"
                        android:fontFamily="@font/my_custom_font"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l7"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/surveyPossibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/my_custom_font"
                        app:ms_alignLabels="false"
                        app:ms_arrowColor="@color/color1"
                        app:ms_arrowSize="14dp"
                        app:ms_baseColor="@color/color1"
                        app:ms_dropDownHintView="@layout/dropdown_hint_item_layout"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="true"
                        app:ms_errorColor="@color/red"
                        app:ms_floatingLabelColor="@color/color1"
                        app:ms_floatingLabelText="DGPS Survey Possibility"
                        app:ms_highlightColor="@color/color1"
                        app:ms_hint="Is DGPS Survey Possible for this Pillar?"
                        app:ms_hintColor="@color/color1"
                        app:ms_hintTextSize="15sp"
                        app:ms_hintView="@layout/hint_item_layout"
                        app:ms_multiline="false"
                        app:ms_thickness="0.5dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l8"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:background="@color/offwhite"
                android:orientation="vertical"
                android:visibility="gone"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/scp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l8"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/scptype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/my_custom_font"
                        app:ms_alignLabels="false"
                        app:ms_arrowColor="@color/color1"
                        app:ms_arrowSize="14dp"
                        app:ms_baseColor="@color/color1"
                        app:ms_dropDownHintView="@layout/dropdown_hint_item_layout"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="true"
                        app:ms_errorColor="@color/red"
                        app:ms_floatingLabelColor="@color/color1"
                        app:ms_floatingLabelText="DGPS Survey Possibility"
                        app:ms_highlightColor="@color/color1"
                        app:ms_hint="Select Pillar Type?"
                        app:ms_hintColor="@color/color1"
                        app:ms_hintTextSize="15sp"
                        app:ms_hintView="@layout/hint_item_layout"
                        app:ms_multiline="false"
                        app:ms_thickness="0.5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/radiobtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l8"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remarks for New Pillar"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>


                <EditText
                    android:id="@+id/editremarkNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/l10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="3"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtPillarNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="true"
                            android:fontFamily="@font/my_custom_font"
                            android:singleLine="true"
                            android:text="Inscribed Pillar No."
                            android:textAlignment="gravity"
                            android:textColor="@color/color1"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/edtdpillno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/back"
                            android:enabled="true"
                            android:fontFamily="@font/my_custom_font"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textColor="@color/color1"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/l10"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <!--   <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textAlignment="center"
                               android:text="Forward"
                               />-->


                        <ImageView
                            android:id="@+id/setpicforward"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/profile"

                            />

                        <ImageView
                            android:id="@+id/takepicforward"
                            android:layout_width="49dp"
                            android:layout_height="57dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/ic_photo_camera_black_24dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/setpicbackward"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/profile"

                            />

                        <ImageView
                            android:id="@+id/takepicbackward"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/ic_photo_camera_black_24dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/setpicinward"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/profile"

                            />

                        <ImageView
                            android:id="@+id/takepicinward"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/ic_photo_camera_black_24dp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l12"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/l11"
                    android:layout_marginLeft="5sp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/my_custom_font"
                        android:gravity="center"
                        android:text="Forward" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/my_custom_font"
                        android:gravity="center"
                        android:text="Backward" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/my_custom_font"
                        android:gravity="center"
                        android:text="Inward" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/l12"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/setpicoutward"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/profile"

                            />

                        <ImageView
                            android:id="@+id/takepicoutward"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/ic_photo_camera_black_24dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/setpictop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/profile"

                            />

                        <ImageView
                            android:id="@+id/takepictop"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/ic_photo_camera_black_24dp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l14"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/l13"
                    android:layout_marginLeft="5sp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/my_custom_font"
                        android:gravity="center"
                        android:text="Outward" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/my_custom_font"
                        android:gravity="center"
                        android:text="With Device" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l14"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="5sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5sp"
                        android:layout_weight="2"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtJobID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="true"
                            android:fontFamily="@font/my_custom_font"
                            android:singleLine="true"
                            android:text="Job ID:"
                            android:textAlignment="gravity"
                            android:textColor="@color/color1"
                            android:textSize="20sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/edtJobID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/back"
                            android:enabled="true"
                            android:fontFamily="@font/my_custom_font"
                            android:textAlignment="center"
                            android:textColor="@color/color1"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l8"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:background="@color/offwhite"
                android:orientation="vertical"
                android:visibility="gone"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/l16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lh2"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center">

                        <fr.ganfra.materialspinner.MaterialSpinner
                            android:id="@+id/chooseReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:fontFamily="@font/my_custom_font"
                            app:ms_alignLabels="false"
                            app:ms_arrowColor="@color/color1"
                            app:ms_arrowSize="14dp"
                            app:ms_baseColor="@color/color1"
                            app:ms_dropDownHintView="@layout/dropdown_hint_item_layout"
                            app:ms_enableErrorLabel="false"
                            app:ms_enableFloatingLabel="true"
                            app:ms_errorColor="@color/red"
                            app:ms_floatingLabelColor="@color/color1"
                            app:ms_floatingLabelText="Reason"
                            app:ms_highlightColor="@color/color1"
                            app:ms_hint="Select Reason"
                            app:ms_hintColor="@color/color1"
                            app:ms_hintTextSize="15sp"
                            app:ms_hintView="@layout/hint_item_layout"
                            app:ms_multiline="false"
                            app:ms_thickness="0.5dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l16"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/edtremark"
                            android:layout_width="fill_parent"
                            android:layout_height="60sp"
                            android:layout_below="@+id/pc"
                            android:backgroundTint="@color/color1"
                            android:breakStrategy="balanced"
                            android:fitsSystemWindows="true"
                            android:fontFamily="@font/my_custom_font"
                            android:gravity="top"
                            android:hint="Reason should be within 30 characters"
                            android:inputType="textMultiLine"
                            android:maxLength="30"
                            android:padding="3dp"
                            android:singleLine="false" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>